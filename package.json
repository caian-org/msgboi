{
  "name": "msgboi",
  "version": "0.2.1",
  "description": "send beautiful slack notifications from gitlab events",
  "main": "index.js",
  "scripts": {
    "gen": "node bin/gen.js",
    "prettify": "prettier --no-semi --print-width 100 --single-quote --trailing-comma none --write '**/*.js'",
    "standard": "standard --fix",
    "fix:style": "npm run prettify && npm run standard",
    "check:lint": "eslint src/*.js",
    "check:style": "standard",
    "bundle": "webpack",
    "bundle:aws": "./bin/bundle.sh aws",
    "bundle:server": "./bin/bundle.sh server",
    "test": "jest --verbose",
    "test:unit": "jest --collect-coverage",
    "coverage:report": "codecov --token=\"$CODECOV_TOKEN\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caiertl/msgboi.git"
  },
  "author": "Caian R. Ertl",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/caiertl/msgboi/issues"
  },
  "homepage": "https://github.com/caiertl/msgboi#readme",
  "dependencies": {
    "mustache": "^4.2.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.13.15",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "codecov": "^3.8.1",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "js-yaml": "^4.0.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "standard": "^16.0.3",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0"
  }
}
